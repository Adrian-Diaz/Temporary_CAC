echo 			both
units			metal
dimension		3
boundary		p p p
atom_style     	CAC 1 1
atom_modify		map array sort 0 0

newton			off
read_data		cacinit.data


variable		u uloop 31 # for NEB per-replica output
pair_style 		CAC/eam
pair_coeff 		* * Cu_u3.eam

#fix				1 all box/relax iso 0.0 vmax 0.001
#min_style			CAC_cg
#minimize			1e-16 0.0 5000 10000


group			vac id 252 
delete_atoms	group vac

min_style			CAC_cg
minimize			1e-16 0.0 5000 10000

#unfix			1
reset_timestep	0
fix				2 all neb_CAC 1.0 #perp 1.0 end last 1.0
compute			centro all centro/atom fcc
variable		this_u equal $u-1
dump 			1 all cfg 500 *_${this_u}.cfg mass type xs ys zs c_centro
dump_modify		1 element Cu

min_style 			CAC_fire
neb_CAC 			1e-16 0.0 1000 1000 500 final cac.last
