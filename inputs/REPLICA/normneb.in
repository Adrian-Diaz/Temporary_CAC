echo 			both
units			metal
dimension		3
boundary		p p p 
atom_style     	atomic
atom_modify		map array sort 0 0


variable		u uloop 31 # for NEB per-replica output
read_data		2.data
pair_style 		eam
pair_coeff 		* * Cu_u3.eam


group			vac id 252 
delete_atoms	group vac
minimize		0.0 1.0e-30 5000 10000

reset_timestep	0

fix				1 all neb 1.0
compute			centro all centro/atom fcc
variable		this_u equal $u-1
dump 			1 all cfg 100000 *_${this_u}.cfg mass type xs ys zs c_centro
dump_modify		1 element Cu

min_style 		quickmin
neb 			0.0 1e-8 1000 1000 500 final 0.last